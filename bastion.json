{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "BastionRgLocation"  : {
            "type": "string"
        },
        "subnetRef": {
            "type": "string"
        },
        "nsgId": {
            "type": "string"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPublicKey": {
            "type": "secureString"
        },
        "ocp4": {
            "type": "string"
        },
        "aadClientId": {
            "type": "string"
        },
        "aadClientSecret": {
            "type": "secureString"
        },
        "keyVaultName": {
            "type": "secureString"
        },
        "domainName": {
            "type": "string"
        },
        "domainRg": {
            "type": "string"
        },
        "clusterName": {
            "type": "string"
        },
        "clusterVersion": {
            "type": "string"
        },
        "clusterLocation": {
            "type": "string"
        },
        "pullSecret": {
            "type": "string"
        },
        "controlPlaneReplica": {
            "type": "int"
        },
        "controlPlaneVmSize": {
            "type": "string"
        },
        "controlPlaneOsDisk": {
            "type": "int"
        },
        "computeReplica": {
            "type": "int"
        },
        "computeVmSize": {
            "type": "string"
        },
        "computeOsDisk": {
            "type": "int"
        }
    },
    "variables": {
        "tenantId": "[subscription().tenantId]",
        "subscriptionId": "[subscription().subscriptionId]",
        "singlequote": "'"
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-05-01",
            "name": "Bastion-NSG",
            "location": "[parameters('BastionRgLocation')]",
            "properties": {
                "securityRules": [{
                }] 
            }   
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-05-01",
            "name": "Bastion-Vnet",
            "location": "[parameters('BastionRgLocation')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "Bastion-Subnet",
                        "properties": {
                            "addressPrefix": "10.0.0.0/16"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-05-01",
            "name": "Bastion-NIC",
            "location": "[parameters('BastionRgLocation')]",
            "dependsOn": [
                "Microsoft.Network/networkSecurityGroups/Bastion-NSG",
                "Microsoft.Network/virtualNetworks/Bastion-Vnet"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[parameters('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Dynamic"
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[parameters('nsgId')]"
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-12-01",
            "name": "Bastion-VM",
            "location": "[parameters('BastionRgLocation')]",
            "dependsOn": [
                "Microsoft.Network/networkInterfaces/Bastion-NIC"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_D2s_v3"
                },
                "storageProfile": {
                    "osDisk": {
                        "name": "Bastion-OSDisk",
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    },
                    "imageReference": {
                        "publisher": "RedHat",
                        "offer": "RHEL",
                        "sku": "8.2",
                        "version": "latest"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', 'Bastion-NIC')]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "Bastion-VM",
                    "adminUsername": "[parameters('adminUsername')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "path": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
                                    "keyData": "[parameters('adminPublicKey')]"
                                }
                            ]
                        }
                    }
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2019-12-01",
            "name": "Bastion-VM/openshiftInstall",
            "location": "[parameters('BastionRgLocation')]",
            "dependsOn": [
                "Microsoft.Compute/virtualmachines/Bastion-VM"
            ],
            "properties": {
                "publisher": "Microsoft.Azure.Extensions",
                "type": "CustomScript",
                "typeHandlerVersion": "2.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "https://raw.githubusercontent.com/Zuldajri/ocp4/master/ocp4.sh"
                    ],
                    "commandToExecute": "[concat('bash ', parameters('ocp4'), ' ', parameters('adminUsername'), ' ', parameters('aadClientId'), ' ', variables('tenantId'), ' ', variables('subscriptionId'), ' ', parameters('aadClientSecret'), ' ', parameters('keyVaultName'), ' ', parameters('domainName'), ' ', parameters('domainRg'), ' ', parameters('clusterName'), ' ', parameters('clusterVersion'), ' ', parameters('clusterLocation'), ' ', parameters('controlPlaneReplica'), ' ', parameters('controlPlaneVmSize'), ' ', parameters('controlPlaneOsDisk'), ' ', parameters('computeReplica'), ' ', parameters('computeVmSize'), ' ', parameters('computeOsDisk'), ' ', variables('singlequote'), parameters('pullSecret'), variables('singlequote'))]"
                },
                "protectedSettings": {
                }
            }
        }    
    ],
    "outputs": {}
}
